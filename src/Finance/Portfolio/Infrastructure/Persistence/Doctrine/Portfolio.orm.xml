<doctrine-mapping xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Finizens\Finance\Portfolio\Domain\Portfolio" table="finance_portfolios">
        <id name="id" type="integer" column="id"/>

        <one-to-one field="allocations"
                    target-entity="Finizens\Finance\Portfolio\Domain\PortfolioAllocationCollection"
                    fetch="EAGER"
                    orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="id" referenced-column-name="portfolio_id"/>
        </one-to-one>
    </entity>
</doctrine-mapping>
