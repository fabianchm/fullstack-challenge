<doctrine-mapping xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Finizens\Finance\Portfolio\Domain\PortfolioAllocationCollection" table="finance_portfolio_allocation_collection">
        <id name="portfolioId" type="integer"/>

        <many-to-many
                field="allocations"
                target-entity="Finizens\Finance\Portfolio\Domain\Allocation"
                fetch="EAGER"
                index-by="id"
                orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="finance_portfolio_allocation_collection_join">
                <join-columns>
                    <join-column name="portfolio_id" referenced-column-name="portfolio_id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column
                            name="allocation_id"
                            referenced-column-name="id"
                            on-delete="CASCADE"
                            unique="true"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
